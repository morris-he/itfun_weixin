/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.main{
    margin: 0 30rpx;
}

.category{
  font-size: 30rpx;
  margin: 30rpx 0;
  font-weight:bold;
}

.name{
  color: #68BFCD;
  font-size: 40rpx;
  font-weight:560;
}

/* 轮播图*/
.wrap{
  position: relative;  
  padding-bottom:120rpx;
  border-bottom: 1px solid #ddd
}

.swipers{
  height:440rpx;
}

.slide-image{
  border-radius: 10rpx;
  width: 100%;
  height:360rpx
}
 
/*用来包裹所有的小圆点  */
.dots{  
  width: 180rpx;
  height: 36rpx; 
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 40%;
  bottom:60rpx;
}  
/*未选中时的小圆点样式 */
.dot{  
  width: 16rpx;  
  height: 16rpx;   
  border-radius: 50%;
  margin-right: 26rpx;
  background-color:#eee;
}  
/*选中以后的小圆点样式  */
.active{  
  background-color: coral;
}

.create_time{
  color: #37A3B8;
  font-size:22rpx;
}

.lesson_name{
  color: #2E3D48;
  font-size: 30rpx;
}

.hot{
    margin-top:60rpx;
}
.hot_top{
  font-size: 30rpx;
  font-weight:bold;
}

.hot_class{
  width: 5000rpx;
  margin-bottom: 20rpx;
}

.image_box{
  float: left;
}

.image_box image{
  width:400rpx;
  height: 200rpx;
  padding-right: 16rpx;
}

.image_name{
    padding:0 16rpx;
    color: #2E3D48;
    font-size:26rpx;
}


