<view class='container'>
  <view class='nav_pic'>
    <image class='nav_thumb' src="{{course.photo}}" mode="aspectFill"></image>
    <view class='icon_thumb'>
      <view class='nav_icon shard'>
        <text class='.icon-share-alt'></text>
      </view>
      <view class='nav_icon'>
        <text class='.icon-heart'></text>
      </view>
    </view>
  </view>
  <view class='nav_main'>
    <view class='nav_label'>
    </view>
    <view class='nav_text'>{{course.name}}</view>
    <!--  -->
    <view class="long-dec {{isFold?'hide':'show'}}">
      <view wx:if="{{course.body == null}}">
        暂无内容
      </view>
      <view wx:else>
        {{course.body}}
      </view>
      <image class="arrow1" src=" {{isFold?'../../assets/image/arrow_down.png':'../../assets/image/arrow_down.png'}}" bindtap="showAll"></image>
    </view>
  </view>
  <!-- 课程列表 start-->
  <view class='class_box'>
    <!-- 列表 -->
    <view wx:for="{{chapters}}" wx:key="id" wx:for-index="in" wx:for-item="item">
      <navigator class='classlist' url="../chapters/chapters?id={{item.id}}" hover-class="navigator-hover">
        <view class='list_icon'>
          <image class='arrow_right arrow' src="../../assets/image/arrow_right.png" mode="aspectFill"></image>
        </view>
        <view class='list_num'>{{in+1}}</view>
        <view class='list_text'>
          <view class='list_title'>{{item.title}}</view>
          <view class='list_time'>{{item.updated_at}}</view>
        </view>
        <view class='list_icon'>
          <image class='download arrow' src="../../assets/image/download.png" mode="aspectFill"></image>
        </view>
      </navigator>

    </view>

    <!-- 列表 -->
  </view>
  <!-- 课程列表 end-->

  <!-- 老师 -->
  <view class='teacher'>
    <view class='teacher_list'>
      <image class='teacher_pic' src="{{teacher.avatar}}" mode="aspectFill"></image>
      <view class='teacher_msg'>
        <view class='teacher_name'>{{teacher.fullname}}</view>
        <view class='teacher_intro'>{{teacher.company}}</view>
      </view>
    </view>
  </view>


  <!-- 滚动图 -->
  <view class='scroll_bottom'>
    <view class='class_other'>其他课程</view>
    <scroll-view scroll-x="true">
      <view class="bottomList" scroll-x="true">
        <view class='listItem' wx:for="{{relation_courses}}" wx:key="id">
          <navigator url="../detail/detail?id={{item.id}}" hover-class="navigator-hover">
            <view class='item_pic'>
              <image class='item_thumb' src="{{item.photo}}" mode="aspectFill"></image>
            </view>
            <view class='item_text'>
              <view class='item_title'>{{item.title}}</view>
            </view>
          </navigator>
        </view>
      </view>
    </scroll-view>
  </view>



</view>