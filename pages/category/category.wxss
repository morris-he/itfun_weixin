/* pages/category/category.wxss */

page {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}

.navigation {
  width: 860rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  font-size: 26rpx;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}

.navigation-item {
  line-height: 40rpx;
  padding: 15rpx 16rpx;
  color: #a0a0a0;
}

.on {
  color: #5f5f62;
  border-bottom: 6rpx solid #4996ad;
}

.swiper-box {
  margin: 20rpx;
}

swiper-item {
  display: flex;
  flex-direction: column;
}

.swiper-content {
  display: flex;
  flex-direction: column;
  margin-bottom: 120rpx;
}

.pic {
  height: 320rpx;
  text-align: center;
}

.photo {
  width: 710rpx;
  height: 100%;
}

.name {
  margin: 20rpx 0;
}

.body {
  font-size: 22rpx;
  color: #97999A;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
